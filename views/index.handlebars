<div class="container">
    <div class="row justify-content-center my-2 mt-md-3 mb-md-2">
    <h1 class="display-4 text-center my-2">Eat-Da-Burger!</h1>
    </div>

    <div class="row justify-content-center text-center mb-2 my-md-3">
    <h3 class="col-12">Enter Burger Name</h3>
    <form class="input-group justify-content-center col-12">
        <label for="burger-name"></label>
        <input type="text" id="burger-name" name="name" placeholder="Burger Name">
        <button type="submit" class="btn add-btn">Order Burger</button>
    </form>
    </div>

    <div class="row justify-content-around text-center">
    <div class="col-12 col-md-5">
        <h3>Burgers To Eat </h3>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-12 col-md-5">
        <h3>Devoured Burgers </h3>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    </div>
</div>
